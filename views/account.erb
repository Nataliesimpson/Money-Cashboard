<form method="get">
<label for="search">Search by tag:</label>
<select name="search">
<option value=""></option>
<% @tags.each do |tag|%>
<option value="<%=tag.id%>"><%=tag.tag_name %></option>
<% end %>
</select>
<input type="hidden" name="search_type" value="tag">
<input type="submit" value="search" >
</form>


<h4>Total expenditure</h4>
<p>£<%=@account.total_expenditure %></p>

<h4>Most expensive transaction</h4>
<p>£<%=@account.most_expensive_transaction_amount %></p>

<h4>Least expensive transaction</h4>
<p>£<%=@account.least_expensive_transaction_amount %></p>

<h4>Total balance</h4>
<p>£<%=@account.total_balance %></p>

<h4>Total number of transactions</h4>
<p><%=@account.total_number_transactions %></p>

<h4>Total income</h4>
<p>£<%=@account.total_income %></p>

<h4>Total expenses</h4>
<p>£<%=@account.total_expenses %></p>

<table>
  <thead>
    <tr>
    <th>Colour</th>
    <th>Tag</th>
    <th>Amount</th>
    </tr>
  </thead>
  <tbody>
<% @tags.each do |tag| %><br>
<tr>
<td></td>
<td><%= tag.tag_name %></td>
<td><%= @account.total_expenditure_by_tag(tag.id)  %></td>
</tr>
<% end %>
</tbody>
</table>




